<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            tools:context=".MainActivity" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textScore">


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/scrollViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/buttonSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Press Me To Begin"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <TextView
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:id="@+id/textScore"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textSize="36sp" android:gravity="center" tools:text="@string/score" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="1.0"
    />
</androidx.constraintlayout.widget.ConstraintLayout>